<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userListFragment">

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.example.userlistapp.fragments.ItemListFragment"
        android:label="UserListFragment"
        tools:layout="@layout/fragment_item_list">
        <action
            android:id="@+id/action_userListFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_userListFragment_to_userDetailFragment"
            app:destination="@id/userDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.userlistapp.fragments.ItemDetailFragment"
        android:label="ItemDetailFragment"
        tools:layout="@layout/fragment_item_detail">
        <argument
            android:name="imageUrl"
            app:argType="string"/>
        <argument
            android:name="imageDesc"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/userDetailFragment"
        android:name="com.example.userlistapp.fragments.UserDetailFragment"
        android:label="UserDetailFragment"
        tools:layout="@layout/fragment_user_detail">
        <argument
            android:name="userProfilePicUrl"
            app:argType="string"/>
        <argument
            android:name="userName"
            app:argType="string"/>
        <argument
            android:name="userLocation"
            app:argType="string"/>
        <argument
            android:name="userBio"
            app:argType="string"/>
    </fragment>
</navigation>